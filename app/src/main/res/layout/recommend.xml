<?xml version="1.0" encoding="utf-8"?>
<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    android:background="@drawable/background_4"
    android:weightSum="4"  >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="6"
            android:gravity="center"
            android:text="推薦穿搭"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50dp"
            />
    </TableRow>

    <TableRow android:layout_weight="4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.3">

            <!-- This is the part that's 70% of the total width. I'm inserting a LinearLayout and buttons.-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:baselineAligned="false"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/hat"
                    android:src="@drawable/hats_converted"
                    android:layout_below="@id/textView1"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hattext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/shirt"
                    android:src="@drawable/shirts_converted"
                    android:layout_below="@id/hattext"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shirttext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/pants"
                    android:src="@drawable/pant_converted"
                    android:layout_below="@id/shirttext"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pantstext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.3">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/scarf"
                    android:src="@drawable/scarfs_converted"
                    android:layout_below="@id/textView1"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scarftext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/coat"
                    android:src="@drawable/coats_converted"
                    android:layout_below="@id/scarftext"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coattext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/shoes"
                    android:src="@drawable/shoe_converted"
                    android:layout_below="@id/coattext"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:clickable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shoestext"
                    android:text="推薦中..."
                    android:layout_below="@id/hat"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>

    </TableRow>

    <TableRow android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nextSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="換下一套"
            android:layout_span="3" />

        <Button
            android:id="@+id/nextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="換個風格"
            android:layout_span="3" />

    </TableRow>



</TableLayout >